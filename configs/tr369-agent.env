# TR-369 USP Agent Configuration
# =================================

# Service Discovery Configuration
CONSUL_ENABLED=true
CONSUL_ADDR=localhost:8500
CONSUL_DATACENTER=openusp-dev

# Agent Device Information
TR369_ENDPOINT_ID=proto://tr369-demo-agent-001
TR369_PRODUCT_CLASS=HomeGateway
TR369_MANUFACTURER=OpenUSP
TR369_MODEL_NAME=USP-Gateway-v1
TR369_SERIAL_NUMBER=DEMO-USP-001
TR369_SOFTWARE_VERSION=1.1.0
TR369_HARDWARE_VERSION=1.0
TR369_DEVICE_TYPE=gateway
TR369_OUI=00D04F

# USP Protocol Configuration
USP_VERSION=1.4
USP_SUPPORTED_VERSIONS=1.3,1.4
USP_AGENT_ROLE=device
USP_COMMAND_KEY=usp-agent-001

# Message Transport Protocol (MTP) Configuration
MTP_TYPE=websocket
# Supported values: websocket, mqtt, stomp, uds (unix domain socket)

# WebSocket MTP Configuration (used when MTP_TYPE=websocket)
WEBSOCKET_URL=ws://localhost:8081/ws
WEBSOCKET_SUBPROTOCOL=v1.usp
WEBSOCKET_PING_INTERVAL=30s
WEBSOCKET_PONG_TIMEOUT=10s
WEBSOCKET_RECONNECT_INTERVAL=5s
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# MQTT MTP Configuration (used when MTP_TYPE=mqtt)
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=usp-agent-001
MQTT_USERNAME=usp
MQTT_PASSWORD=usp123
MQTT_TOPIC_REQUEST=usp/agent/request
MQTT_TOPIC_RESPONSE=usp/agent/response
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_CLEAN_SESSION=true
MQTT_KEEP_ALIVE=60s

# STOMP MTP Configuration (used when MTP_TYPE=stomp)
STOMP_BROKER_URL=tcp://localhost:61613
STOMP_USERNAME=usp
STOMP_PASSWORD=usp123
STOMP_DESTINATION_REQUEST=/queue/usp.agent.request
STOMP_DESTINATION_RESPONSE=/queue/usp.agent.response
STOMP_HEARTBEAT_SEND=30s
STOMP_HEARTBEAT_RECEIVE=30s

# Unix Domain Socket MTP Configuration (used when MTP_TYPE=uds)
UDS_SOCKET_PATH=/tmp/usp-agent.sock
UDS_SOCKET_MODE=0666

# OpenUSP Platform Integration
OPENUSP_PLATFORM_URL=http://localhost:6500
OPENUSP_API_VERSION=v1
OPENUSP_REGISTRATION_ENDPOINT=/api/v1/devices
OPENUSP_HEARTBEAT_INTERVAL=60s

# Consul Service Discovery Integration (when CONSUL_ENABLED=true)
CONSUL_SERVICE_DISCOVERY_ENABLED=true
CONSUL_MTP_SERVICE_NAME=openusp-mtp-service
CONSUL_API_GATEWAY_SERVICE_NAME=openusp-api-gateway
CONSUL_HEALTH_CHECK_INTERVAL=10s
CONSUL_SERVICE_TAGS=tr369,usp,agent,v1.1.0

# Agent Behavior Configuration
AGENT_AUTO_REGISTER=true
AGENT_PERIODIC_INFORM_ENABLED=true
AGENT_PERIODIC_INFORM_INTERVAL=300s
AGENT_PARAMETER_UPDATE_NOTIFICATION=true
AGENT_EVENT_NOTIFICATION=true
AGENT_DIAGNOSTIC_MODE=false

# Security Configuration
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_CA_FILE=
TLS_SKIP_VERIFY=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE=logs/tr369-agent.log

# Performance Tuning
BUFFER_SIZE=4096
MAX_MESSAGE_SIZE=1048576
CONNECTION_TIMEOUT=30s
READ_TIMEOUT=60s
WRITE_TIMEOUT=60s
IDLE_TIMEOUT=300s

# Development and Testing
DEVELOPMENT_MODE=true
MOCK_DATA_ENABLED=false
TEST_MODE=false
VERBOSE_LOGGING=false