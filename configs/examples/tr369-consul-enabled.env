# Example TR-369 USP Agent Configuration - Consul Enabled
# ===========================================================

# Service Discovery Configuration
CONSUL_ENABLED=true
CONSUL_ADDR=localhost:8500
CONSUL_DATACENTER=openusp-dev

# Agent Device Information
TR369_ENDPOINT_ID=proto://tr369-production-gateway-001
TR369_PRODUCT_CLASS=SmartGateway
TR369_MANUFACTURER=ACME Corp
TR369_MODEL_NAME=ACME-Gateway-Pro
TR369_SERIAL_NUMBER=ACME-GW-001234
TR369_SOFTWARE_VERSION=2.1.0
TR369_HARDWARE_VERSION=2.0
TR369_DEVICE_TYPE=gateway
TR369_OUI=001122

# USP Protocol Configuration
USP_VERSION=1.4
USP_SUPPORTED_VERSIONS=1.3,1.4
USP_AGENT_ROLE=device
USP_COMMAND_KEY=acme-gateway-001234

# Message Transport Protocol Configuration
MTP_TYPE=websocket

# WebSocket MTP Configuration (Auto-discovered via Consul)
# Note: When Consul is enabled, the agent will automatically discover
# the MTP service endpoint. Manual URL is used as fallback.
WEBSOCKET_URL=ws://localhost:8081/ws
WEBSOCKET_SUBPROTOCOL=v1.usp
WEBSOCKET_PING_INTERVAL=30s
WEBSOCKET_PONG_TIMEOUT=10s
WEBSOCKET_RECONNECT_INTERVAL=5s
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# OpenUSP Platform Integration (Auto-discovered via Consul)
# When Consul is enabled, these will be auto-discovered
OPENUSP_PLATFORM_URL=http://localhost:6500
OPENUSP_API_VERSION=v1
OPENUSP_REGISTRATION_ENDPOINT=/api/v1/devices
OPENUSP_HEARTBEAT_INTERVAL=60s

# Consul Service Discovery Integration
CONSUL_SERVICE_DISCOVERY_ENABLED=true
CONSUL_MTP_SERVICE_NAME=openusp-mtp-service
CONSUL_API_GATEWAY_SERVICE_NAME=openusp-api-gateway
CONSUL_HEALTH_CHECK_INTERVAL=10s
CONSUL_SERVICE_TAGS=tr369,usp,acme,production,v2.1.0

# Agent Behavior Configuration
AGENT_AUTO_REGISTER=true
AGENT_PERIODIC_INFORM_ENABLED=true
AGENT_PERIODIC_INFORM_INTERVAL=300s
AGENT_PARAMETER_UPDATE_NOTIFICATION=true
AGENT_EVENT_NOTIFICATION=true
AGENT_DIAGNOSTIC_MODE=false

# Security Configuration
TLS_ENABLED=false
TLS_CERT_FILE=/etc/ssl/certs/agent.crt
TLS_KEY_FILE=/etc/ssl/private/agent.key
TLS_CA_FILE=/etc/ssl/certs/ca.crt
TLS_SKIP_VERIFY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE=logs/tr369-agent-production.log

# Performance Tuning
BUFFER_SIZE=8192
MAX_MESSAGE_SIZE=2097152
CONNECTION_TIMEOUT=30s
READ_TIMEOUT=60s
WRITE_TIMEOUT=60s
IDLE_TIMEOUT=300s

# Production Settings
DEVELOPMENT_MODE=false
MOCK_DATA_ENABLED=false
TEST_MODE=false
VERBOSE_LOGGING=false