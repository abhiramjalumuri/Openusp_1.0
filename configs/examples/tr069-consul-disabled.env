# Example TR-069 CWMP Agent Configuration - Consul Disabled  
# ===========================================================

# Service Discovery Configuration
CONSUL_ENABLED=false
CONSUL_ADDR=
CONSUL_DATACENTER=

# Agent Device Information
TR069_ENDPOINT_ID=cwmp://tr069-remote-cpe-001
TR069_PRODUCT_CLASS=RemoteCPE
TR069_MANUFACTURER=Remote Systems Co
TR069_MODEL_NAME=RemoteSys-CPE-Lite
TR069_SERIAL_NUMBER=RSYS-CPE-345678
TR069_SOFTWARE_VERSION=2.0.5
TR069_HARDWARE_VERSION=2.0
TR069_DEVICE_TYPE=cpe
TR069_OUI=112233

# CWMP Protocol Configuration
CWMP_VERSION=1.2
CWMP_SUPPORTED_VERSIONS=1.0,1.1,1.2
CWMP_AGENT_ROLE=cpe
CWMP_CONNECTION_REQUEST_AUTH=basic

# ACS Configuration (Static Configuration)
# All ACS settings must be explicitly configured when Consul is disabled
ACS_URL=https://acs.remote-systems.com/cwmp
ACS_USERNAME=remote_cpe
ACS_PASSWORD=remote_cpe_pass_789
ACS_PERIODIC_INFORM_ENABLED=true
ACS_PERIODIC_INFORM_INTERVAL=1800s
ACS_PARAMETER_KEY=remote-cpe-345678

# Connection Request Configuration
CONNECTION_REQUEST_URL=https://cpe.customer.site:8443/cr
CONNECTION_REQUEST_USERNAME=cr_user
CONNECTION_REQUEST_PASSWORD=cr_pass_321
CONNECTION_REQUEST_PATH=/cr
CONNECTION_REQUEST_PORT=8443

# OpenUSP Platform Integration (Static Configuration)
# All platform URLs must be explicitly configured when Consul is disabled
OPENUSP_PLATFORM_URL=https://platform.remote-systems.com
OPENUSP_API_VERSION=v1
OPENUSP_REGISTRATION_ENDPOINT=/api/v1/devices
OPENUSP_HEARTBEAT_INTERVAL=300s
OPENUSP_CWMP_SERVICE_ENDPOINT=/cwmp

# Consul Service Discovery Integration (Disabled)
CONSUL_SERVICE_DISCOVERY_ENABLED=false
CONSUL_CWMP_SERVICE_NAME=
CONSUL_API_GATEWAY_SERVICE_NAME=
CONSUL_HEALTH_CHECK_INTERVAL=0s
CONSUL_SERVICE_TAGS=tr069,cwmp,remote,cpe

# SOAP/XML Configuration
SOAP_VERSION=1.1
SOAP_NAMESPACE=urn:dslforum-org:cwmp-1-2
XML_STRICT_PARSING=false
XML_PRETTY_PRINT=false
ENVELOPE_NAMESPACE_PREFIX=soap

# HTTP/HTTPS Configuration
HTTP_TIMEOUT=120s
HTTP_KEEP_ALIVE=true
HTTP_MAX_IDLE_CONNECTIONS=5
HTTP_IDLE_TIMEOUT=180s
HTTP_TLS_HANDSHAKE_TIMEOUT=15s
HTTP_EXPECT_CONTINUE_TIMEOUT=2s

# Agent Behavior Configuration
AGENT_AUTO_REGISTER=true
AGENT_INFORM_ON_BOOT=true
AGENT_INFORM_ON_PERIODIC=true
AGENT_INFORM_ON_VALUE_CHANGE=false
AGENT_INFORM_ON_CONNECTION_REQUEST=true
AGENT_MAX_ENVELOPES=1
AGENT_RETRY_MIN_WAIT_INTERVAL=10s
AGENT_RETRY_INTERVAL_MULTIPLIER=3000

# TR-181 Data Model Configuration
TR181_ROOT_OBJECT=Device.
TR181_DEVICE_TYPE=InternetGatewayDevice
TR181_SPEC_VERSION=2.16.0
TR181_PARAMETER_NOTIFICATIONS=false
TR181_OBJECT_NOTIFICATIONS=false

# Session Management
SESSION_TIMEOUT=600s
SESSION_MAX_CONCURRENT=3
SESSION_KEEP_ALIVE=true
SESSION_COOKIE_ENABLED=false

# Security Configuration (Production HTTPS)
TLS_ENABLED=true
TLS_CERT_FILE=/opt/remote/certs/cpe.crt
TLS_KEY_FILE=/opt/remote/certs/cpe.key
TLS_CA_FILE=/opt/remote/certs/ca.crt
TLS_SKIP_VERIFY=false
DIGEST_AUTH_ENABLED=false
BASIC_AUTH_ENABLED=true

# Authentication Configuration
AUTH_REALM=Remote-CPE
AUTH_ALGORITHM=MD5
AUTH_QOP=auth
AUTH_NONCE_TIMEOUT=600s

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=text
LOG_OUTPUT=file
LOG_FILE=/var/log/tr069-agent.log
LOG_SOAP_MESSAGES=false
LOG_HTTP_REQUESTS=false

# Performance Tuning
BUFFER_SIZE=2048
MAX_MESSAGE_SIZE=524288
CONNECTION_TIMEOUT=60s
READ_TIMEOUT=120s
WRITE_TIMEOUT=120s
IDLE_TIMEOUT=900s

# RPC Method Configuration (Limited for Remote CPE)
RPC_GET_RPC_METHODS=true
RPC_SET_PARAMETER_VALUES=true
RPC_GET_PARAMETER_VALUES=true
RPC_GET_PARAMETER_NAMES=true
RPC_SET_PARAMETER_ATTRIBUTES=false
RPC_GET_PARAMETER_ATTRIBUTES=false
RPC_ADD_OBJECT=false
RPC_DELETE_OBJECT=false
RPC_REBOOT=true
RPC_FACTORY_RESET=false
RPC_DOWNLOAD=true
RPC_UPLOAD=false

# Event Configuration (Minimal for Remote CPE)
EVENT_BOOTSTRAP=true
EVENT_BOOT=true
EVENT_PERIODIC=true
EVENT_VALUE_CHANGE=false
EVENT_CONNECTION_REQUEST=true
EVENT_TRANSFER_COMPLETE=true
EVENT_DIAGNOSTICS_COMPLETE=false

# Fault Management
FAULT_TOLERANCE_ENABLED=true
FAULT_MAX_RETRY_COUNT=5
FAULT_RETRY_INTERVAL=30s
FAULT_DETAILED_REPORTING=false

# Production Settings
DEVELOPMENT_MODE=false
MOCK_DATA_ENABLED=false
TEST_MODE=false
VERBOSE_LOGGING=false
SIMULATE_DEVICE_RESPONSES=false