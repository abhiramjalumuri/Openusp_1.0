# Example TR-369 USP Agent Configuration - Consul Disabled
# ============================================================

# Service Discovery Configuration
CONSUL_ENABLED=false
CONSUL_ADDR=
CONSUL_DATACENTER=

# Agent Device Information
TR369_ENDPOINT_ID=proto://tr369-standalone-device-001
TR369_PRODUCT_CLASS=SmartDevice
TR369_MANUFACTURER=IoT Solutions Inc
TR369_MODEL_NAME=IoT-Device-Basic
TR369_SERIAL_NUMBER=IOT-DEV-567890
TR369_SOFTWARE_VERSION=1.5.2
TR369_HARDWARE_VERSION=1.2
TR369_DEVICE_TYPE=device
TR369_OUI=AABBCC

# USP Protocol Configuration
USP_VERSION=1.3
USP_SUPPORTED_VERSIONS=1.3,1.4
USP_AGENT_ROLE=device
USP_COMMAND_KEY=iot-device-567890

# Message Transport Protocol Configuration
MTP_TYPE=mqtt

# MQTT MTP Configuration (Static Configuration)
# Since Consul is disabled, all endpoints must be explicitly configured
MQTT_BROKER_URL=tcp://mqtt.example.com:1883
MQTT_CLIENT_ID=iot-device-567890
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_secure_password
MQTT_TOPIC_REQUEST=usp/device/567890/request
MQTT_TOPIC_RESPONSE=usp/device/567890/response
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_CLEAN_SESSION=true
MQTT_KEEP_ALIVE=60s

# OpenUSP Platform Integration (Static Configuration)
# All URLs must be explicitly configured when Consul is disabled
OPENUSP_PLATFORM_URL=https://usp-platform.example.com
OPENUSP_API_VERSION=v1
OPENUSP_REGISTRATION_ENDPOINT=/api/v1/devices
OPENUSP_HEARTBEAT_INTERVAL=120s

# Consul Service Discovery Integration (Disabled)
CONSUL_SERVICE_DISCOVERY_ENABLED=false
CONSUL_MTP_SERVICE_NAME=
CONSUL_API_GATEWAY_SERVICE_NAME=
CONSUL_HEALTH_CHECK_INTERVAL=0s
CONSUL_SERVICE_TAGS=tr369,usp,iot,standalone

# Agent Behavior Configuration
AGENT_AUTO_REGISTER=true
AGENT_PERIODIC_INFORM_ENABLED=true
AGENT_PERIODIC_INFORM_INTERVAL=600s
AGENT_PARAMETER_UPDATE_NOTIFICATION=true
AGENT_EVENT_NOTIFICATION=true
AGENT_DIAGNOSTIC_MODE=false

# Security Configuration (Production TLS)
TLS_ENABLED=true
TLS_CERT_FILE=/opt/iot/certs/device.crt
TLS_KEY_FILE=/opt/iot/certs/device.key
TLS_CA_FILE=/opt/iot/certs/ca.crt
TLS_SKIP_VERIFY=false

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=text
LOG_OUTPUT=file
LOG_FILE=/var/log/tr369-agent.log

# Performance Tuning
BUFFER_SIZE=4096
MAX_MESSAGE_SIZE=1048576
CONNECTION_TIMEOUT=45s
READ_TIMEOUT=90s
WRITE_TIMEOUT=90s
IDLE_TIMEOUT=600s

# Production Settings
DEVELOPMENT_MODE=false
MOCK_DATA_ENABLED=false
TEST_MODE=false
VERBOSE_LOGGING=false