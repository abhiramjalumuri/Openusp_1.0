# TR-069 CWMP Agent Configuration
# =================================

# Service Discovery Configuration
CONSUL_ENABLED=true
CONSUL_ADDR=localhost:8500
CONSUL_DATACENTER=openusp-dev

# Agent Device Information
TR069_ENDPOINT_ID=cwmp://tr069-demo-agent-001
TR069_PRODUCT_CLASS=HomeGateway
TR069_MANUFACTURER=OpenUSP
TR069_MODEL_NAME=CWMP-Gateway-v1
TR069_SERIAL_NUMBER=DEMO-CWMP-001
TR069_SOFTWARE_VERSION=1.1.0
TR069_HARDWARE_VERSION=1.0
TR069_DEVICE_TYPE=gateway
TR069_OUI=00D04F

# CWMP Protocol Configuration
CWMP_VERSION=1.4
CWMP_SUPPORTED_VERSIONS=1.0,1.1,1.2,1.3,1.4
CWMP_AGENT_ROLE=cpe
CWMP_CONNECTION_REQUEST_AUTH=digest

# ACS (Auto Configuration Server) Configuration
ACS_URL=http://localhost:7547
ACS_USERNAME=acs
ACS_PASSWORD=acs123
ACS_PERIODIC_INFORM_ENABLED=true
ACS_PERIODIC_INFORM_INTERVAL=300s
ACS_PARAMETER_KEY=cwmp-agent-001

# Connection Request Configuration
CONNECTION_REQUEST_URL=http://localhost:9999/cr
CONNECTION_REQUEST_USERNAME=cr
CONNECTION_REQUEST_PASSWORD=cr123
CONNECTION_REQUEST_PATH=/cr
CONNECTION_REQUEST_PORT=9999

# OpenUSP Platform Integration
OPENUSP_PLATFORM_URL=http://localhost:6500
OPENUSP_API_VERSION=v1
OPENUSP_REGISTRATION_ENDPOINT=/api/v1/devices
OPENUSP_HEARTBEAT_INTERVAL=60s
OPENUSP_CWMP_SERVICE_ENDPOINT=/cwmp

# Consul Service Discovery Integration (when CONSUL_ENABLED=true)
CONSUL_SERVICE_DISCOVERY_ENABLED=true
CONSUL_CWMP_SERVICE_NAME=openusp-cwmp-service
CONSUL_API_GATEWAY_SERVICE_NAME=openusp-api-gateway
CONSUL_HEALTH_CHECK_INTERVAL=10s
CONSUL_SERVICE_TAGS=tr069,cwmp,agent,v1.1.0

# SOAP/XML Configuration
SOAP_VERSION=1.1
SOAP_NAMESPACE=urn:dslforum-org:cwmp-1-4
XML_STRICT_PARSING=false
XML_PRETTY_PRINT=false
ENVELOPE_NAMESPACE_PREFIX=soap

# HTTP/HTTPS Configuration
HTTP_TIMEOUT=60s
HTTP_KEEP_ALIVE=true
HTTP_MAX_IDLE_CONNECTIONS=10
HTTP_IDLE_TIMEOUT=90s
HTTP_TLS_HANDSHAKE_TIMEOUT=10s
HTTP_EXPECT_CONTINUE_TIMEOUT=1s

# Agent Behavior Configuration
AGENT_AUTO_REGISTER=true
AGENT_INFORM_ON_BOOT=true
AGENT_INFORM_ON_PERIODIC=true
AGENT_INFORM_ON_VALUE_CHANGE=true
AGENT_INFORM_ON_CONNECTION_REQUEST=true
AGENT_MAX_ENVELOPES=1
AGENT_RETRY_MIN_WAIT_INTERVAL=5s
AGENT_RETRY_INTERVAL_MULTIPLIER=2000

# TR-181 Data Model Configuration
TR181_ROOT_OBJECT=Device.
TR181_DEVICE_TYPE=InternetGatewayDevice
TR181_SPEC_VERSION=2.19.1
TR181_PARAMETER_NOTIFICATIONS=true
TR181_OBJECT_NOTIFICATIONS=true

# Session Management
SESSION_TIMEOUT=300s
SESSION_MAX_CONCURRENT=5
SESSION_KEEP_ALIVE=true
SESSION_COOKIE_ENABLED=false

# Security Configuration
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_CA_FILE=
TLS_SKIP_VERIFY=true
CERTIFICATE_AUTH_ENABLED=false
DIGEST_AUTH_ENABLED=true
BASIC_AUTH_ENABLED=true

# Authentication Configuration
AUTH_REALM=CWMP
AUTH_ALGORITHM=MD5
AUTH_QOP=auth
AUTH_NONCE_TIMEOUT=300s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE=logs/tr069-agent.log
LOG_SOAP_MESSAGES=false
LOG_HTTP_REQUESTS=false

# Performance Tuning
BUFFER_SIZE=4096
MAX_MESSAGE_SIZE=1048576
CONNECTION_TIMEOUT=30s
READ_TIMEOUT=60s
WRITE_TIMEOUT=60s
IDLE_TIMEOUT=300s
MAX_CONNECTIONS=100

# RPC Method Configuration
RPC_GET_RPC_METHODS=true
RPC_SET_PARAMETER_VALUES=true
RPC_GET_PARAMETER_VALUES=true
RPC_GET_PARAMETER_NAMES=true
RPC_SET_PARAMETER_ATTRIBUTES=true
RPC_GET_PARAMETER_ATTRIBUTES=true
RPC_ADD_OBJECT=true
RPC_DELETE_OBJECT=true
RPC_REBOOT=true
RPC_FACTORY_RESET=false
RPC_DOWNLOAD=true
RPC_UPLOAD=false

# Event Configuration
EVENT_BOOTSTRAP=true
EVENT_BOOT=true
EVENT_PERIODIC=true
EVENT_VALUE_CHANGE=true
EVENT_CONNECTION_REQUEST=true
EVENT_TRANSFER_COMPLETE=true
EVENT_DIAGNOSTICS_COMPLETE=false
EVENT_REQUEST_DOWNLOAD=false
EVENT_AUTONOMOUS_TRANSFER_COMPLETE=false

# Fault Management
FAULT_TOLERANCE_ENABLED=true
FAULT_MAX_RETRY_COUNT=3
FAULT_RETRY_INTERVAL=10s
FAULT_DETAILED_REPORTING=true

# Development and Testing
DEVELOPMENT_MODE=true
MOCK_DATA_ENABLED=false
TEST_MODE=false
VERBOSE_LOGGING=false
SIMULATE_DEVICE_RESPONSES=false