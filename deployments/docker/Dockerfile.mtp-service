# MTP Service Dockerfile
FROM openusp:latest AS mtp-service

# Switch to non-root user
USER openusp

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8081/health || exit 1

# Expose MTP Service port
EXPOSE 8081

# Start MTP Service
CMD ["./bin/mtp-service"]