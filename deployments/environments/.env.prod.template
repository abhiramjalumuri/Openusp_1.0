# Production Environment Variables
# IMPORTANT: Copy this file to .env.prod and update with actual values

# Database Configuration (REQUIRED)
POSTGRES_DB=openusp
POSTGRES_USER=openusp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# RabbitMQ Configuration (REQUIRED)
RABBITMQ_USER=openusp
RABBITMQ_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Service Configuration
LOG_LEVEL=info
DATA_SERVICE_PORT=9092
API_GATEWAY_PORT=8080
MTP_SERVICE_PORT=8081
CWMP_SERVICE_PORT=7547

# TLS Configuration (RECOMMENDED for production)
TLS_ENABLED=false
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# USP Configuration (REQUIRED)
USP_ENDPOINT_ID=usp.controller.prod

# CWMP Configuration (REQUIRED)
CWMP_USERNAME=acs
CWMP_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Monitoring
METRICS_ENABLED=true
GRAFANA_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100

# CORS Configuration
CORS_ENABLED=true

# Build Configuration (set by CI/CD)
VERSION=latest
BUILD_TIME=
BUILD_USER=
GIT_COMMIT=
GIT_BRANCH=
GIT_TAG=